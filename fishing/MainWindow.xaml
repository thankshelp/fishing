<Window x:Class="fishing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fishing"
        mc:Ignorable="d"
        Title="MainWindow" Height="1018" Width="1000">
    <Grid>
        <Grid x:Name="menu" HorizontalAlignment="Left" Height="1000" Margin="-4,-4,-2.4,0" VerticalAlignment="Top" Width="1000" Visibility="Visible">
            <Grid.Background>
                <ImageBrush ImageSource="image/ff_set.png"/>
            </Grid.Background>
            <TextBox x:Name="kol_weed" HorizontalAlignment="Left" Height="94" Margin="326,295,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" FontSize="48" TextAlignment="Center" TextDecorations="{x:Null}">
                <TextBox.Background>
                    <ImageBrush ImageSource="image/ff_kol.png"/>
                </TextBox.Background>
            </TextBox>
            <TextBox x:Name="OFish" HorizontalAlignment="Left" Height="93" Margin="326,463,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" FontSize="48" TextAlignment="Center">
                <TextBox.Background>
                    <ImageBrush ImageSource="image/ff_kol.png"/>
                </TextBox.Background>
            </TextBox>
            <TextBox x:Name="BFish" HorizontalAlignment="Left" Height="92" Margin="326,629,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" TextAlignment="Center" FontSize="48">
                <TextBox.Background>
                    <ImageBrush ImageSource="image/ff_kol.png"/>
                </TextBox.Background>
            </TextBox>
            <Button x:Name="start" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="348" Click="start_Click" Canvas.Left="58" Canvas.Top="51" Height="92" Margin="326,761,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="image/ff_start.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Canvas x:Name="scene" HorizontalAlignment="Left" Height="1000" Margin="-4,-4,-2.4,0" VerticalAlignment="Top" Width="1000" Visibility="Hidden">
            <Canvas.Background>
                <ImageBrush ImageSource="image/fish_fon.jpg"/>
            </Canvas.Background>
        </Canvas>
    </Grid>



</Window>
